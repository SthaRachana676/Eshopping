@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                Name
            </th>
            
           
            <th>
                Price
            </th>
            <th>
                Category
            </th>
            <th>
                Image
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @item.Name
            </td>
            
            <td>
                @item.Price.ToString("Rs.")
            </td>
            <td>
                @item.Category.Name
            </td>
            <td>
                <img src="~/media/products/@item.Image" width="100" alt="" />

            </td>
            <td>
                <a asp-action="Update" class="btn btn-primary" asp-route-id="@item.Id">Update</a>
                <a asp-action="Details" class="btn btn-success" asp-route-id="@item.Id">Details</a>
                <a class="confirmDeletion btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                
               
            </td>
        </tr>
}
    </tbody>
</table>
<div class="d-flex w-100 justify-content-center">
<pagination page-count="@ViewBag.TotalPages" page-target="/admin/product/" page-number="@ViewBag.PageNumber" page-range="@ViewBag.PageRange">

</pagination></div>
